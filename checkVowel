const vowels = ['a', 'e', 'i', 'o', 'u'];
const vowelCount = 0;
const testWord = 'hello';
const res = '';

function vowelCheck(word) {
  const checkWord = word.split('');
  for (let char of checkWord) {
    if (checkWord[char].includes(vowels)) {
      vowelCount++;
    }
    return vowelCount;
  }
}
vowelCheck(testWord);




/////More effecitive response ///

const findVowels = str => {
  const matched = str.match(/[aeiou]/gi)
  return matched ? matches.length : 0
}

